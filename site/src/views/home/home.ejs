    <!-- HEAD -->

    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>
            <!-- HEADER -->


            <!--MAIN-->

            <main class="home">


                <section class="banner">
                    <img class="banner1" src="/images/wireframe/movil.png" alt="banner" />
                    <img class="banner2" src="/images/wireframe/banner.png" alt="banner" />
                </section>

                <!-- PUBLICIDAD -->
                <section class="products">

                    <a class="padreHombre" href="/products/hombre">
                        <article class="productsHombre">
                            <div>
                                <img class="padreImg" src="/images/wireframe/hombre.png" alt="hombre" />

                            </div>
                            <h5>HOMBRE</h5>
                        </article>
                    </a>

                    <a class="padreMujer" href="/products/mujer">
                        <article class="productsMujer">

                            <div>
                                <img class="padreImg" src="/images/wireframe/mujer.png" alt="mujer">

                            </div>
                            <h5>MUJER</h5>
                        </article>
                    </a>
                    <a class="of" href="/products/outlet">

                        <article>
                            <div class="oferta">
                                <img class="of-img" src="/images/wireframe/ofertas.png" alt="of">
                            </div>
                        </article>
                    </a>
                </section>

                <!-- PUBLICIDAD -->

                <section>
                    <article class="lanzamiento">
                        <h1>LANZAMIENTO</h1>
                    </article>
                </section>
               <!--  <section class="mercaderia" > -->
                    <!-- lanzamiento -->
                    <div class="zapas-recomendadas contenedor">
                        <div class="contenedor-principal">
                            <button role="button" id="flecha-izquierda" class="flecha-izquierda"><i class="fas fa-angle-left"></i></button>
                              <div class="contenedor-carousel">
                                 <div class="carousel">
                                       <% producto.map(e=>{%>
                            
                                     <% if(e.Temporada.nombre === "Si"){ %> 
                                     <article id="zapatilla-img" class="zapatilla-img">
                                        <a href="/products/productDetail/<%=e.id %> ">
                                            <div>
                                                <img class="zapatilla-img1" src="/images/articulos/<%=e.Imagen[0].nombre%> "
                                                alt="<%=e.Imagen.nombre  %> ">
                                            </div>
                                            <div id= "ofertasZapatillaPrecio"class="ofertasZapatillaPrecio">

                                                <h4>$<%=toThousand(e.precio) %>
                                                </h4>
                                                <p>
                                                    <%= e.Marca.nombre %>
                                                </p>
                                                <strong>
                                                    <%= e.nombre%>
                                                </strong>
                                            </div>
                                        </a>
                                    </article>
                                    
                                        <% } %>
                                 <% })%>
                            </div>
                          </div>
                        <button role="button" id="flecha-derecha" class="flecha-derecha"><i class="fas fa-angle-right"></i></button>
                    </div>
                </div>
                <!-- </div> -->
                
                                         <!-- lanzamiento -->

                <!-- </section> -->
                <section>
                    <article class="loMasVendido">
