                <section class="zapatillas">
                    <!-- zapatillas -->
                    <% let contador=0 %>
                        <% zapatillas.map(e=>{%>
                            <% contador++ %>
                                <%if(contador<=8){%>
                                    <article class="zapatilla-img">
                                        <a href="/products/productDetail/<%= e.id %> ">
                                            <div>
                                                <img class="zapatilla-img1" src="/images/articulos/<%= e.imgP %> "
                                                    alt="zapatilla-img1">
                                            </div>
                                            <div class="ofertasZapatillaPrecio">
                                                <h4>$<%=toThousand(e.price) %>
                                                </h4>
                                                <p>
                                                    <%= e.marca %>
                                                </p>
                                                <strong>
                                                    <%= e.title%>
                                                </strong>
                                            </div>
                                        </a>
                                    </article>
                                    <% } %>
                                        <% }) %>

                                            <!-- zapatillas -->
                </section>
                <section>
                    <article class="lanzamiento">
                        <h1>LANZAMIENTO</h1>
                    </article>
                </section>



                <section class="zapatillas">
                    <!-- lanzamiento -->
                    <% let contadorL=0 %>
                        <% lanzamiento.map(e=>{%>
