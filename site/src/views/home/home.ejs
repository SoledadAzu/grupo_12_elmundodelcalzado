                              <div id="contenedor-carousel2" class="contenedor-carousel2">
                                 <div class="carousel2">
                        <% producto.map(el=>{%>
                           
                            <% if(el.Outlet.nombre === "Si"){ %> 
                                    <article id= "zapatilla-img2"class="zapatilla-img">
                                        <a href="/products/productDetail/<%=el.id%> ">
                                            <div>
                                                <img class="zapatilla-img1" src="/images/articulos/<%=el.Imagen[0].nombre%> "
                                                alt="<%=el.Imagen.nombre  %> ">
                                            </div>
                                            <div class="ofertasZapatillaPrecio">
                                                <h4>$<%=toThousand(el.precio) %>
