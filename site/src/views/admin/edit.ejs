<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%-include('./partials/head') %>
  <!-- head -->

  <body class="crearForm">
    <!-- navegacion -->
    <%-include('./partials/header') %>
      <!-- navegacion -->
      <main class="adminForm">
        <div class="">
          <div class="">
            <div class="">
              <h2 class="">Estás editando: <i>
                  <%= idFind.nombre %>
                    </i></h2>
            </div>
          </div>
          <div class="contenedor-form">
            <form action="/admin/edit/<%= idFind.id %>?_method=PUT " enctype="multipart/form-data" method="POST">
              <div class="contenedorLabel">

                <div class="labelForm">
                  <label for="title" class="">Nombre del producto:</label>
                  <input type="text" id="title" name="title" placeholder="Ej: Zapatillas Reebok" class="form-input"
                    value="<%= idFind.nombre %> ">
                    
                </div>
                <div class="labelForm">
                  <label for="price" class="">Precio del producto:</label>
                  <input type="text" id="price" name="price" class="form-input"
                    value="<%= idFind.precio %>">
                    
                </div>
                <section class="seccion">
                  <div class="labelForm width">
                    <label for="colors" class="">Colores:</label>
                    <% idFind.Color.map(e=> {%>
                      <input type="text" id="colors" name="colors" value="<%= e.nombre %>" class="form-input">
                      <%}) %>
                      

                  </div>
                  <div class="labelForm width">
                    <label for="detalles" class="">Detalles:</label>
                    <% idFind.Detalle.map(e=> {%>
                      <input type="text" id="detalles" name="detalles" value="<%= e.nombre %>" class="form-input">
                      <%}) %>
                      
                  </div>
                </section>

                <div class="selection">
                  <div>
                    <label for="genero" class="form-label" value="<%= idFind.genero %>">Genero</label>
                    <select name="genero" id="genero" class="form-input">
                      <option value="" hidden selected>Elegí</option>                     
                      <option value="2" <%=idFind.Genero.nombre==="Hombre" ? "selected" : null %>>Hombre</option>
                      <option value="1" <%=idFind.Genero.nombre==="Mujer" ? "selected" : null %>>Mujer</option>
                    </select>
                  </div>
                  <div>
                    <label for="temporada" class="form-label" value="<%= idFind.Temporada.nombre %>">Temporada</label>
                    <select name="temporada" id="temporada" class="form-input">
                      <option value="" hidden selected>Elegí</option>
                      <option value="1" <%=idFind.Temporada.nombre==="Si" ? "selected" : null %>>Si</option>
                      <option value="2" <%=idFind.Temporada.nombre==="No" ? "selected" : null %>>No</option>

                    </select>
                  </div>
                  <div>
                    <label for="outlet" class="form-label" value="<%= idFind.Outlet.nombre %>">Outlet</label>
                    <select name="outlet" id="outlet" class="form-input">
                      <option value="" hidden selected>Elegí</option>
                      <option value="1" <%=idFind.Outlet.nombre==="Si" ? "selected" : null %>>Si</option>
                      <option value="2" <%=idFind.Outlet.nombre==="No" ? "selected" : null %>>No</option>

                    </select>
                  </div>
                  <div>
                    <label for="marca" class="form-label" value="<%= idFind.Marca.nombre %>">Marca</label>
                    <select name="marca" id="marca" class="form-input">
                      <option value="" hidden selected>Marca</option>
                      <option value="1" <%=idFind.Marca.nombre==="Adidas" ? "selected" : null %>>Adidas</option>
                      <option value="3" <%=idFind.Marca.nombre==="Nike" ? "selected" : null %>>Nike</option>
                      <option value="5" <%=idFind.Marca.nombre==="Asics" ? "selected" : null %>>Asics</option>
                      <option value="7" <%=idFind.Marca.nombre==="Fila" ? "selected" : null %>>Fila</option>
                      <option value="8" <%=idFind.Marca.nombre==="Topper" ? "selected" : null %>>Topper</option>
                      <option value="6" <%=idFind.Marca.nombre==="Converse" ? "selected" : null %>>Converse</option>
                      <option value="9" <%=idFind.Marca.nombre==="New Balance" ? "selected" : null %>>New Balance</option>
                      <option value="4" <%=idFind.Marca.nombre==="Puma" ? "selected" : null %>>Puma</option>
                      <option value="2" <%=idFind.Marca.nombre==="Adidas Original" ? "selected" : null %>>Adidas Original</option>
                    </select>
                  </div>
                </div>
                <div>
                  <label for="talles">Talles:</label>
                  <div class="container-talles">

                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="35" value="35"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="35" ? 'checked' : null%>
                          <%})%>>
                            35
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="36" value="36"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="36" ? 'checked' : null%>
                          <%})%>>
                            36
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="37" value="37"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="37" ? 'checked' : null%>
                          <%})%>>
                            37
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="38" value="38"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="38" ? 'checked' : null%>
                          <%})%>>
                            38
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="39" value="39"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="39" ? 'checked' : null%>
                          <%})%>>
                            39
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="40" value="40"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="40" ? 'checked' : null%>
                          <%})%>>
                            40
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="41" value="41"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="41" ? 'checked' : null%>
                          <%})%>>
                            41
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="42" value="42"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="42" ? 'checked' : null%>
                          <%})%>>
                            42
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="43" value="43"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="43" ? 'checked' : null%>
                          <%})%>>
                            43
                      </label>
                    </div>
                    <div>
                      <label>
                        <input type="checkbox" name="talles" id="44" value="44"<% idFind.Talle.filter(element=> {%>
                        <%= element.nombre==="44" ? 'checked' : null%>
                          <%})%>>
                            44
                      </label>
                    </div>
                    



                  </div>
                  <div class="labelForm">
                    <label for="img" class="" >ingrese sus imagenes:</label>
                    <input type="file" id="img" name="img"class="form-input" multiple>
                    <% if(locals.errors && errors.img){ %>
                      <p style="color:red"><%= errors.img.msg %> </p>
                      <% }%>
                  </div>



                </div>
                <div class="labelForm">
                  <label for="description" class="form-label" value="">Descripción:</label>
                  <textarea name="description" id="description" class="form-input"><%= idFind.descripcion %></textarea>
                </div>
                
                <div class="">
                  <button class="btn btn-outline-success" type="submit">Editar Producto</button>
                </div>
              </div>
            </form>
          </div>

        </div>




        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
          crossorigin="anonymous"></script>
      </main>
  </body>

</html>