<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%-include('./partials/head') %>
  <!-- head -->

  <body>
    <!-- navegacion -->
    <div class="headerFijo">
      <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src="/images/logo.png" alt="" width="70" height="50" class="d-inline-block align-text-top"></a>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin">Administrador</a>
              </li>
              <!-- <li class="nav-item">
                <a class="nav-link" href="#">Outlet</a>
              </li>-->
              <li class="nav-item dropdown">
                <a class="nav-link" href="/admin/usuarios">Usuarios</a>
              </li> 
              <li class="nav-item">
                <a class="nav-link disabled"></a>
              </li>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
          <div style="margin-left: 5px;">
            <a href="/admin/cerrar">
              <button class="btn btn-outline-success">CERRAR SESION</button></a>
          </div>
        </div>
    </div>
    </nav>
    </div>
    <!-- navegacion -->

    <!-- TABLAS -->
    <main class="admin_prod">
      <a href="/admin/create" class="btn btn-outline-primary m-3" role="button" aria-disabled="true">Crear</a>

      <div class="">
        <table class="table" style="width: 150%;">
          <thead>
            <tr style="background-color:#F1948A">
              <th scope="col">#</th>
              <th scope="col">Nombre</th>
              <th scope="col">Precios</th>
              <th scope="col">Genero</th>
              <th scope="col">Marca</th>
              <th scope="col">Temporada</th>
              <th scope="col"></th>

            </tr>
          </thead>
          <tbody>
            <% products.map(e=>{%>
              <tr>
                <th scope="row">
                  <%= e.id %>
                </th>
                <td>
                  <%= e.nombre %>
                </td>
                <td>$<%= toThousand(e.precio) %>
                </td>
                <td>
                  <%= e.Genero.nombre %>

                </td>
                <td>
                  <%= e.Marca.nombre %>
                </td>
                <td>
                  <% if(e.Temporada.nombre=== "Si"){ %>
                    <%= "false" %> 
                  <%} else{%>
                    <%= "true" %> 
                    <%}%>
                </td>

                <td>
                  <div>
                  <a href="/admin/edit/<%= e.id %> " class="btn btn-outline-primary" role="button"
                    aria-disabled="true">EDITAR</a>
                  </div>
                  <form class="formEliminar" action="/admin/eliminar/<%= e.id %>?_method=DELETE " method="POST" style="display: inline-flex">
                    <button type="submit" id="btn-eliminar" class="btn btn-outline-danger">ELIMINAR</button>
                  </form>
                </td>
              </tr>
              <%})%>
          </tbody>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
            crossorigin="anonymous"></script>
            <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script src="/js/sweetAlert.js"></script>
    </main>
  </body>

</html>