<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%-include('./partials/head') %>
  <!-- head -->
  <%-include('./partials/header') %>
  <body class="crearForm">
    <!-- navegacion -->

    <!-- navegacion -->
    <main class="adminForm">
      <div class="">
        <div class="">
          <div class="">
            <h2 class="">Formulario de creación de productos</h2>
          </div>
        </div>
        <div class="contenedor-form">
          <form
            id="formcreate"
            action="/admin/create"
            enctype="multipart/form-data"
            method="POST"
          >
            <div class="contenedorLabel">
              <div class="labelForm" id="inputbox">
                <label for="title" class="">Nombre del producto:</label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  value="<%= locals.oldData && oldData.title ? oldData.title : null %>"
                  class="input1 form-input"
                /><br />
                <small class="error-title"></small>
                <% if(locals.errors && errors.title){ %>
                <p style="color: red"><%= errors.title.msg %></p>
                <% } %>
              </div>
              <div class="labelForm" id="inputbox">
                <label for="price" class="">Precio del producto:</label>
                <input
                  type="number"
                  id="price"
                  name="price"
                  value="<%= locals.oldData && oldData.price ? oldData.price : null %>"
                  class="input1 form-input"
                /><br />
                <small class="error-price"></small>
                <% if(locals.errors && errors.price){ %>
                <p style="color: red"><%= errors.price.msg %></p>
                <% } %>
              </div>
              <section class="selection">
                <div class="labelForm width" id="inputbox">
                  <label for="colores" class="colors">Colores:</label>
                  <input
                    type="text"
                    id="colors1"
                    name="colors"
                    placeholder="Color Primario"
                    class="input1 form-input"
                  />
                  <input
                    type="text"
                    id="colors2"
                    name="colors"
                    placeholder="Color secundario"
                    class="input1 form-input"
                  />
                  <input
                    type="text"
                    id="colors3"
                    name="colors"
                    placeholder="Color terciario"
                    class="input1 form-input"
                  /><br />
                  <small class="error-color"></small>
                  <% if(locals.errors && errors.colors){ %>
                  <p style="color: red"><%= errors.colors.msg %></p>
                  <% } %>
                </div>
                <div class="labelForm width" id="inputbox">
                  <label for="detalle" class="details">Detalles:</label>
                  <input
                    type="text"
                    id="detalles1"
                    name="detalles"
                    placeholder="ingrese su detalle"
                    class="input1 form-input"
                  />
                  <input
                    type="text"
                    id="detalles2"
                    name="detalles"
                    placeholder="Ingrese su detalle"
                    class="input1 form-input"
                  />
                  <input
                    type="text"
                    id="detalles3"
                    name="detalles"
                    placeholder="Ingrese su detalle"
                    class="input1 form-input"
                  />
                  <input
                    type="text"
                    id="detalles4"
                    name="detalles"
                    placeholder="Ingrese su detalle"
                    class="input1 form-input"
                  /><br />
                  <small class="error-detalle"></small>

                  <% if(locals.errors && errors.detalles){ %>
                  <p style="color: red"><%= errors.detalles.msg %></p>
                  <% } %>
                </div>
              </section>

              <div class="selection">
                <div>
                  <label for="genero" class="form-label">Genero</label>
                  <select name="genero" id="genero" class="form-input select" >
                    <option value="" hidden selected>Elegí</option>

                    <% generos.forEach(genero => {%>
                    <option value="<%= genero.id %>">
                      <%= genero.nombre %>
                    </option>

                    <% }); %>
                  </select>
                </div>
                <div>
                  <label for="temporada" class="form-label">Temporada</label>
                  <select
                    name="temporada"
                    id="temporada"
                    class="form-input select"
                    onchange
                  >
                    <option value="" hidden selected>Elegí</option>

                    <% temporadas.forEach(temporada => {%>
                    <option value="<%= temporada.id %>">
                      <%= temporada.nombre %>
                    </option>

                    <% }); %>
                  </select>
                </div>
                <div>
                  <label for="category" class="form-label">Outlet</label>
                  <select name="outlet" id="outlet" class="form-input select" onchange>
                    <option value="" hidden selected>Elegí</option>

                    <% outlets.forEach(outlet=> {%>
                    <option value="<%= outlet.id %>">
                      <%= outlet.nombre %>
                    </option>

                    <% }); %>
                  </select>
                </div>
                <div>
                  <label for="marca" class="form-label">Marca</label>
                  <select name="marca" id="marca" class="form-input select" onchange>
                    <option value="" hidden selected>Elegi</option>

                    <% marcas.forEach(marca=> {%>
                    <option value="<%= marca.id %>"><%= marca.nombre %></option>

                    <% }); %>
                  </select>
                </div>
              </div>
              <div>
                <label for="talles">Talles:</label>
                <div class="container-talles">
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="35"
                      value="35"
                    />
                    <label for="35">35</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="36"
                      value="36"
                    />
                    <label for="36">36</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="37"
                      value="37"
                    />
                    <label for="37">37</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="38"
                      value="38"
                    />
                    <label for="38">38</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="39"
                      value="39"
                    />
                    <label for="39">39</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="40"
                      value="40"
                    />
                    <label for="40">40</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="41"
                      value="41"
                    />
                    <label for="41">41</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="42"
                      value="42"
                    />
                    <label for="42">42</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="43"
                      value="43"
                    />
                    <label for="43">43</label>
                  </div>
                  <div class="checkdiv">
                    <input
                      class="tallescheck"
                      type="checkbox"
                      name="talles"
                      id="44"
                      value="44"
                    />
                    <label for="44">44</label>
                  </div>
                  <% if(locals.errors && errors.talles){ %>
                  <p style="color: red"><%= errors.talles.msg %></p>
                  <% } %>
                </div>
                <small class="errortalles"></small>
              </div>

              <div class="labelForm">
                <label for="img" class="">ingrese sus imagenes:</label>
                <input
                  type="file"
                  id="img"
                  name="img"
                  class="form-input"
                  multiple
                />
                <% if(locals.errors && errors.img){ %>
                <p style="color: red"><%= errors.img.msg %></p>
                <% } %>
              </div>
              <div class="labelForm" id="inputbox">
                <label for="description" class="form-label">Descripción:</label>
                <textarea
                  name="description"
                  id="description"
                  value="<%= locals.oldData && oldData.description ? oldData.description : null %>"
                  class="input1 form-input"
                ></textarea
                ><br />
                <small class="error-description"></small>
              </div>
              <% if(locals.errors && errors.description){ %>
              <p style="color: red"><%= errors.description.msg %></p>
              <% } %> <br />
              <small class="error-description"></small>

              <div class="">
                <button
                  class="btn btn-outline-success"
                  id="submit-btn"
                  type="submit"
                >
                  Guardar Producto
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"
      ></script>
    </main>
    <script src="/js/createvalidafront.js"></script>
  </body>
</html>
