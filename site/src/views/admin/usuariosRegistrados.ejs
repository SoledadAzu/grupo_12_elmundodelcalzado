      <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src="/images/logo.png" alt="" width="70" height="50" class="d-inline-block align-text-top"></a>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin">Administrador</a>
              </li>
            
              <li class="nav-item">
                <a class="nav-link disabled"></a>
              </li>
            </ul>
           <!--  <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form> -->
          </div>
          <div style="margin-left: 5px;">
            <a href="/">
              <button class="btn btn-outline-success">CERRAR SESION</button></a>
          </div>
        </div>
    </div>
    </nav>
    </div>
    <!-- navegacion -->

    <!-- TABLAS -->
    <main class="admin_prod">
      <a href="/user/register" class="btn btn-outline-primary m-3" role="button" aria-disabled="true">Crear</a>

      <div class="">
        <table class="table" style="width: 100%;">
          <thead>
            <tr style="background-color:#F1948A">
              
              <th scope="col">#</th>
              <th scope="col">Nombres</th>
              <th scope="col">Apellido</th>
              <th scope="col">Email</th>
              <th scope="col">Rol</th>
              <th scope="col">solicitud</th>
              <th class="col">Password</th>
              
             
            

            </tr>
          </thead>
          <tbody class="tuser">
            <% usuarios.map(e=>{%>
              <tr>
                
                <th scope="row">
                  <%= e.id %>
                </th>
                <td >
                  <%= e.nombre %>
                </td >
                <td><%= e.apellido %>
                </td>
                <td>
                  <%= e.email %>
                </td>
                
                <td class="td_rol" style="display:flex">
                  <form action="/user/update/<%= e.id %>?_method=PUT " method="POST" style="display: inline-flex">
                    <select name="rol" id="rol" class="form-input" style="width: 90px; font-size: 22px;">
                      <% categorias.forEach(categoria => {%>
                        <option  value="<%= categoria.nombre %>" <% if (e.categoriaId == categoria.id){%><%= 'selected'  %><%}%>><%= categoria.nombre %> </option>
										  
                      <% }); %> 
										  
									
									  </select>
                      <button type="submit" class="bt_modif">Modificar</button>
                  </form>
                  <!-- <button type="submit" class="bt_modif">Modificar</button> -->
                  
                </td>
                <td>
                  <form action="/user/eliminar/<%= e.id %>?_method=DELETE " method="POST" style="display: inline-flex">
                    <button type="submit" class="btn btn-outline-danger">ELIMINAR</button>
                  </form>
                
              </td>
                
                <td class="td_password">
                 
                    <%= e.password %>
                  
                </td>
              </tr>
              <%})%>
          </tbody>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
            crossorigin="anonymous"></script>
    </main>
  </body>
</html>