<!DOCTYPE html>
<html lang="en">
  <!-- HEAD -->
  <%- include('../partials/head') %>
  <!-- HEAD -->

  <body>
    <!-- HEADER -->
    <%- include('../partials/header') %>
    <!-- HEADER -->

    <!-- MAIN -->
    <main>
      <img width="100%" src="/images/bannerlogomarcas/Banner-NewBalance.png" alt="">
      <h1>PRODUCTOS DE MARCA: NEW BALANCE</h1>
   
      <section class="mercaderia">
        <%  producto.map(e=>{%>
          <% if(e.Marca.nombre =="New Balance"){ %> 
     
           <article>
            <a href="/products/productDetail/<%= e.id %>">
               <div>
                   <img src="/images/articulos/<%= e.Imagen[0].nombre %>" alt="e.Imagen.nombre">
               </div>  
               <div>
                <strong>
                  <%= toThousand(e.precio)%>
                </strong>
                <p>
                    <%=e.marca%>
                </p>
                <h4>
                    <%= e.nombre%>
                </h4>
               </div>
            </a>   
           </article>
           <% } %> 
           <% }) %>
        </section>
    </main>
    <!-- MAIN -->

    <!-- FOOTER -->
    <%- include('../partials/footer') %>
    <!-- FOOTER -->
  </body>
</html>
