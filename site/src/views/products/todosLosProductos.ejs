<body>
    
    <!-- HEADER -->
    <%- include('../partials/header') %> 
    <!-- HEADER -->

    <!-- MAIN -->
    <main>
        <img width="100%" src="/images/adidas_banner.jpg" alt="">
        <h1>TODOS LOS PRODUCTOS</h1>
        <br>
    <section class="mercaderia">
    <%  productos.map(e=>{%>
 
       <article>
        <a href="/products/productDetail/<%= e.id %>">
           <div>
               <img src="/images/articulos/<%= e.imgP %>" alt="zapatilla-img1">
           </div>  
           <div>
            <strong>
                <%= toThousand(e.price)%>
            </strong>
            <p>
                <%=e.marca%>
            </p>
            <h4>
                <%= e.title%>
            </h4>
           </div>
        </a>   
       </article>
       <% }) %>
    </section>
</main>
    <!-- MAIN -->
            
        <!-- FOOTER -->
        <%- include('../partials/footer') %> 
