<body class="bodyUser">
    <form action="/user/editPerfil/<%= userPerfil.id %> " method="GET">
    <section class="seccion-perfil-usuario">
        <div class="perfil-usuario-header">
            <div class="perfil-usuario-portada">
                <div class="perfil-usuario-avatar">
                    <img src="/images/users/<%= userPerfil.imagen %> " alt="img-avatar">
                    <!-- <button type="button" class="boton-avatar">
                        <input type="file" name="img" id="img" class= "boton-avatar2">
                        <i class="far fa-image"></i>
                    </button> -->
                </div>
                
            </div>
        </div>
        <div class="perfil-usuario-body">
            <div class="perfil-usuario-bio">
                <h2 class="titulo">
                    
                   <span><%= userPerfil.nombre %></span> 
                    <span><%= userPerfil.apellido %></span>
       
                </h2>
                
                    
                
            </div>

            <div  class="perfil-usuario-footer">
                <div>
                   <h3>
                        <i class="fas fa-envelope"></i>
                        Email de usuario:
                        <%= userPerfil.email %>
                    </h3>
                </div>        
                <div style="margin-left: 10px;">
                    <h3>
                        <i class="fas fa-key"></i>
                        Password: **************
                    
                    </h3>
                </div>
            </div>    
        </div>
        
        <div class="editarBtn">
            <button type="submit" class="bt_modif">Editar</button>
            
        </div>
        
    
    
</form>
<form action="/user/eliminarPerfil/<%= userPerfil.id %>?_method=DELETE " method="POST" style="display: inline-flex">
    <button type="submit" class="bt_eliminar">Eliminar</button>
  </form>

</section>
    
    <!--====  End of html  ====-->
