<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%-include('../partials/head') %>
  <!-- head -->
  <!-- HEADER -->
  <%- include('../partials/header') %>
  <!-- HEADER -->

<body>
  
    <form id="form"  action="/user/updatePerfil/<%= userPerfil.id %> " method="POST" enctype="multipart/form-data">
    <section class="seccion-perfil-usuario">
        <div class="perfil-usuario-header">
            <div class="perfil-usuario-portada">
                <div class="perfil-usuario-avatar">
                    <img src="/images/users/<%= userPerfil.imagen %> " alt="img-avatar">
                    <label for="imge" class="boton-avatar">
                        <input type="file" name="imge" id="imge" class= "boton-avatar2">
                        <div>
                        <i class="far fa-image"></i>
                    </div>
                    </label>
                </div>
               
              
            </div>
        </div>
       
        <div  class="perfil-usuario-body">
          
            <div class="perfil-usuario-bio">
                <div style="margin: 0 auto;">
                    <% if(locals.errors && errors.img){ %>
                        <p style="color:red"><%= errors.img.msg %> </p>
                        <% } %> 
                    </div>
                <div class="titulo">
                    <div>
                    <i class="fas fa-user"></i>

                   <input type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre" value="<%= locals.oldData && oldData.nombre ? oldData.nombre : null %>"> 
                   <p id="errorN" class="errorN"> </p>
                   <%if(locals.errors && errors.nombre){ %> 
                    <p style="color:red"><%= errors.nombre.msg %> </p>
                    <% } %> 
                </div>
                   
                <div>
                   <input type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido"value="<%= locals.oldData && oldData.apellido ? oldData.apellido : null %>"> 
                   <p id="errorA" class="errorA"> </p>
                

                    <% if(locals.errors && errors.apellido){ %>
                        <p style="color:red"><%= errors.apellido.msg %> </p>
                        <% }%>
                        </div>
                
                    </div>
                
                    
                
            </div>

            <div  class="perfil-usuario-footer">
               
                <div class=>
                    <label for="email">
                        <i class="fas fa-envelope"></i>
                        Email:
                    </label>
                    
                    <input type="email" name="email" id="email" placeholder="Ingrese su email"value="<%= locals.oldData && oldData.email ? oldData.email : null %>">
                    <p id="errorE" class="errorE"> </p>

                    <% if(locals.errors && errors.email){ %> 
                        <p style="color:red"><%= errors.email.msg %> </p>
                        <% } %> 
                    
                </div> 

                <div>
                    <label for="password">
                        <i class="fas fa-key"></i>
                        Contrase√±a:
                    </label>
                    
                    <input type="password" name="password" id="password" placeholder="Ingrese su password" value="">
                    <p id="errorP" class="errorP"> </p>
                    
            
                    <% if(locals.errors && errors.password){ %> 
                        <p style="color:red"><%= errors.password.msg %> </p>
                        <% } %> 
                    
                </div>
               

            </div>    
        </div>
        <div class="editarBtn">
            <button id="button" type="submit" class="bt_modif">Aceptar</button>

            <a href="/user/perfiluser/<%= userPerfil.id %> "class="bt_eliminar">Cancelar</a>
        </div>
     
    </section>
    
    
</form>


    <!--====  End of html  ====-->
     <!-- FOOTER -->
     <%- include('../partials/footer') %>
